#include<iostream>
  using namespace std;
  int main()
  {
      string n;
      double a,b,res;
      cin >> n;
      cin >>a>>b;
      res = (b*.15)+a;
      cout.setf(ios::fixed,ios::floatfield);
      cout.precision(2);
      cout <<"TOTAL = R$ "<< res<<endl;
      return 0;


  }
  
  
  
