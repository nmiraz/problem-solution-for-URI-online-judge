#include<iostream>
 using namespace std;
 int main()
 {
     int v,h=0,m=0,s=0;
     cin >> v;
     if(v<60)
    {
        s=v;
        cout << h<<":"<<m<<":"<<s<<endl;
    }
        else if(v<3600 && v>60)
         {
           m=v/60;
           s=v%60;
        cout << h<<":"<<m<<":"<<s<<endl;
         }
        else
            {
            h=v/3600;
            v= v-(h*3600);
            m=(v/60);
            s=v-(m*60);
            cout<<h<<":"<<m<<":"<<s<<endl;
            }
            return 0;

      }
      
      
      
      
