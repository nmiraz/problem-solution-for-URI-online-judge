#include<iostream>
#include<cstdio>
  using namespace std;
  int main()
  {
      double R,pi=3.14159;
      cin >> R;
      double A=pi*(R*R);
    cout.setf(ios::fixed,ios::floatfield);
    cout.precision(4);
      cout <<"A="<<A<<endl;
      return 0;

  }
  

